<Page x:Class="баскетбол.VisitorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:баскетбол"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisitorMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
        </Grid>
        <Grid Grid.Row="1">
            <Button x:Name="Teams" Content="Teams" Click="Teams_Click"  Height="30" Width="90" Margin="0 -40 150 0" Background="#FF6995C2" Foreground="White"></Button>
            <Button x:Name="Players" Content="Players" Click="Players_Click"  Height="30" Width="90" Margin="0 -40 -100 0" Background="#FF6995C2" Foreground="White"></Button>
            <Button x:Name="Photos" Content="Photos" Click="Photos_Click"  Height="30" Width="90" Margin="0 70 -100 0" Background="#FF6995C2" Foreground="White"></Button>
            <Button x:Name="Matchups" Content="Matchups" Click="Matchups_Click"  Height="30" Width="90" Margin="0 70 150 0" Background="#FF6995C2" Foreground="White"></Button>
        </Grid>
        </Grid>
</Page>
