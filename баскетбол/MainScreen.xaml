<Page x:Class="баскетбол.MainScreenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:баскетбол"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainScreenPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10,0">
        </Grid>
            <Grid Grid.Row="1">
            <Button x:Name="Visitor" HorizontalAlignment="Center" Height="40" Width="90" Content="Visitor" Background="#FF6995C2" Foreground="White" Click="Visitor_Click" Margin=" 0 10 120 30 "></Button>
            <Button x:Name="Admin" HorizontalAlignment="Center" Height="40" Width="90" Content="Admin" Background="#FF6995C2" Foreground="White" Click="Admin_Click" Margin=" 0 10 -130 30 "></Button>
        </Grid>

    </Grid>
</Page>
